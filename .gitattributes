# =========================
# Default Behavior
# =========================

# Auto detect text files and perform LF normalization
* text=auto eol=lf

# =========================
# C# / .NET Files
# =========================

## Source code
*.cs            text diff=csharp
*.csx           text diff=csharp
*.vb            text
*.fs            text
*.fsi           text
*.fsx           text

## Project files
*.csproj        text eol=crlf merge=union
*.vbproj        text eol=crlf merge=union
*.fsproj        text eol=crlf merge=union
*.dbproj        text eol=crlf merge=union
*.sln           text eol=crlf merge=union
*.sqlproj       text eol=crlf merge=union
*.wwaproj       text eol=crlf merge=union
*.xproj         text eol=crlf merge=union
*.props         text eol=crlf
*.filters       text eol=crlf
*.vcxproj       text eol=crlf

## Configuration files
*.json          text
*.xml           text
*.config        text eol=crlf
*.runsettings   text eol=crlf
app.config      text eol=crlf
web.config      text eol=crlf
packages.config text eol=crlf
nuget.config    text eol=crlf

## .NET Core
*.deps.json     text eol=lf
*.runtimeconfig.json text eol=lf
global.json     text eol=lf

# =========================
# Web / Frontend Files
# =========================

## HTML/CSS
*.html          text diff=html
*.htm           text diff=html
*.css           text diff=css
*.scss          text diff=css
*.sass          text
*.less          text

## JavaScript/TypeScript
*.js            text
*.jsx           text
*.ts            text diff=typescript
*.tsx           text diff=typescript
*.mjs           text
*.cjs           text
*.coffee        text
*.map           text -diff

## React/Vite specific
*.config.js     text eol=lf
*.config.ts     text eol=lf
*.config.mjs    text eol=lf
vite.config.ts  text eol=lf
vite.config.js  text eol=lf
tsconfig.json   text eol=lf
tsconfig.*.json text eol=lf
.eslintrc       text eol=lf
.eslintrc.json  text eol=lf
.prettierrc     text eol=lf
.babelrc        text eol=lf

## Package files
package.json    text eol=lf
package-lock.json text eol=lf -diff
yarn.lock       text eol=lf -diff
pnpm-lock.yaml  text eol=lf -diff
.npmrc          text eol=lf
.yarnrc         text eol=lf
.pnpmfile.cjs   text eol=lf

